        "signup": {
          "type": "string"
        },
        "signout": {
          "type": "string"
        },
        "learn-more": {
          "type": "string"
        },
        "get-started": {
          "type": "string"
        }
      },
      "required": ["signin", "signup", "signout", "learn-more", "get-started"]

                    {
                      "type": "object",
                      "properties": {
                        "title": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        }
                      },
                      "required": ["title", "description"]
                    }
                  ]
                }
              },
              "required": ["name", "title", "description", "list"]
            }
          },
          "required": [
            "title",
            "discription",
            "about-section",
            "feature-section"
          ]

          "required": [
            "title",
            "or",
            "discription",
            "phoneNumber",
            "otp",
            "remember-me",
            "forgot-password"
          ]
        },
        "signup": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "or": {
              "type": "string"
